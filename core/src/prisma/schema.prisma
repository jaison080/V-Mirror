generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int      @id @default(autoincrement())
  name    String
  email String   @unique
  password String
  screenshots Screenshots[]
}

model Screenshots {
  filename String @id
  publicUrl String
  user     User @relation(fields: [userId], references: [id])
  userId   Int
  createdAt DateTime @default(now())
}


model Products {
  name String
  originalPrice Float
  offerPrice Float
  isNewProduct Boolean
  createdAt DateTime @default(now())


  // SHIRT = 1
  // PANT = 2
  // SPECS = 3
  type Int
  id Int
  
  fileName String
  publicUrl String

  @@id([type, id])
}